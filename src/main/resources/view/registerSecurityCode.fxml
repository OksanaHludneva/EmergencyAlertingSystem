<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" hgap="10" vgap="10"
          fx:controller="com.example.eas_finalproject.controllers.RegisterController"
          style="-fx-background-color: #b4b4b1">

    <Text text="SECURITY CODE CONFIRMATION" GridPane.rowIndex="0" GridPane.columnIndex="3" style="-fx-font-size: 20px;"/>

    <Label fx:id="securityCodeLabel" text="Enter provided security code" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
    <PasswordField fx:id="securityCodeField" GridPane.rowIndex="2" GridPane.columnIndex="3" style="-fx-font-size: 12"/>
    <Button onAction="#confirmSecurityCode" GridPane.rowIndex="3" GridPane.columnIndex="3" text="Confirm" style="-fx-font-size: 12; -fx-background-color: #f6bd16"/>

</GridPane>
