<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" hgap="10" vgap="10"
          prefHeight="600.0" prefWidth="600.0"
          fx:controller="com.example.eas_finalproject.controllers.RegisterController">

    <Text text="Register page" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="3" style="-fx-font-size: 20px;"/>

    <Label text="Enter your Username" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="usernameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Enter your Password" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Confirm your Password" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <PasswordField fx:id="confirmPasswordField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Enter your Full Name" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Enter your Email" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Label text="Enter your Phone Number" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <TextField fx:id="phoneField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <Button onAction="#onUserRegisterClick" GridPane.rowIndex="9" GridPane.columnIndex="1" text="Register" style="-fx-background-color: #d95924"/>
    <Button onAction="#onUserLoginClick" GridPane.rowIndex="10" GridPane.columnIndex="1"  text="Existing user? Login" style="-fx-background-color: #5baeb7" />

</GridPane>