<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" hgap="10" vgap="10"
          prefHeight="600.0" prefWidth="600.0"
          fx:controller="com.example.eas_finalproject.controllers.MessagingController">

    <Label text="SOME TEXT HERE" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-font-size: 20; -fx-background-color: #5baeb7 "/>

    <Label prefHeight="18.0" prefWidth="125.0" text="Choose alerting type" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-font-size: 20"/>
    <CheckBox mnemonicParsing="false" text="Aqua" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    <CheckBox mnemonicParsing="false" text="Black" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    <CheckBox mnemonicParsing="false" text="Blue" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
    <CheckBox mnemonicParsing="false" text="Brown" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
    <CheckBox mnemonicParsing="false" text="Green" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
    <CheckBox mnemonicParsing="false" text="Grey" GridPane.rowIndex="9" GridPane.columnIndex="1"/>
    <CheckBox mnemonicParsing="false" text="Orange" GridPane.rowIndex="10" GridPane.columnIndex="1"/>
    <CheckBox mnemonicParsing="false" text="Purple" GridPane.rowIndex="11" GridPane.columnIndex="1"/>
    <CheckBox mnemonicParsing="false" text="Red" GridPane.rowIndex="12" GridPane.columnIndex="1"/>
    <CheckBox mnemonicParsing="false" text="Silver" GridPane.rowIndex="13" GridPane.columnIndex="1"/>
    <CheckBox mnemonicParsing="false" text="White" GridPane.rowIndex="14" GridPane.columnIndex="1"/>
    <CheckBox mnemonicParsing="false" text="Yellow" GridPane.rowIndex="15" GridPane.columnIndex="1"/>
    <CheckBox mnemonicParsing="false" text="Amber" GridPane.rowIndex="16" GridPane.columnIndex="1"/>
    <CheckBox mnemonicParsing="false" text="Pink" GridPane.rowIndex="17" GridPane.columnIndex="1"/>

    <Label prefHeight="18.0" prefWidth="120.0" text="Choose impacted area" GridPane.columnIndex="3" GridPane.rowIndex="3" style="-fx-font-size: 20"/>
    <CheckBox mnemonicParsing="false" text="Vidzeme" GridPane.rowIndex="4" GridPane.columnIndex="3" />
    <CheckBox mnemonicParsing="false" text="Zemgale" GridPane.rowIndex="5" GridPane.columnIndex="3" />
    <CheckBox mnemonicParsing="false" text="Kurzeme" GridPane.rowIndex="6" GridPane.columnIndex="3" />
    <CheckBox mnemonicParsing="false" text="Latgale" GridPane.rowIndex="7" GridPane.columnIndex="3" />

    <Label text="Enter message text" GridPane.rowIndex="11" GridPane.columnIndex="3" style="-fx-font-size: 20"/>
    <TextArea fx:id="messageTextField" GridPane.rowIndex="12" GridPane.columnIndex="3"/>

    <Button onAction="#sendMessageClick" GridPane.columnIndex="3" GridPane.rowIndex="18" prefHeight="26.0" prefWidth="125.0"
            text="Send message" style="-fx-background-color: #d95924" />
    <Button onAction="#logoutClick" GridPane.columnIndex="3" GridPane.rowIndex="19" prefHeight="26.0" prefWidth="125.0"
            text="Logout" style="-fx-background-color: #5baeb7" />
</GridPane>